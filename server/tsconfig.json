{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "vite"],
    "noImplicitAny": false,
    "sourceMap": true,
    "paths": {
      "@server/*": ["./*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "ts-node":{
    "esm": true
  },
  "include": ["src/ai.ts"],
  "exclude": ["node_modules", "dist"]
}

