{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {"@shared/*": ["../shared"]
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include": ["src/ai.ts"],
  "exclude": ["node_modules", "dist"]
}

