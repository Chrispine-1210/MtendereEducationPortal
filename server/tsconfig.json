{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@middleware/*": ["./src/middleware"],
      "shared/*": ["../shared"],
      "modules/*": ["./src/modules"]
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/ai.ts", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}