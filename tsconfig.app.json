{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "composite": true,
      "noEmit": false,
      "tsBuildInfoFile": "node_modules/typescript/app.tsbuildinfo",
      "outDir": "dist",
      "rootDir": ".",
      "isolatedModules": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "client/src/**/*",
      "server/**/*",
      "vite.config",
      "shared/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "dist",
      "build"
    ]
  }
  