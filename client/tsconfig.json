{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}