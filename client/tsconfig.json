{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "src/*",
            ],
            "@shared/*": [
                "../shared/*",
            ],
            "@assets/*": [
                "../attached_assets/*",
            ],
        },
    },
    "include": [
        "src/**/*"
    ]
}